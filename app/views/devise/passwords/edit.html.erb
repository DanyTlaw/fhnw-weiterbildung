<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>
	<div class="container">
	        <div id="login-overlay" class="modal-dialog">
	          <div class="modal-content">
	            <div class="modal-header">
	              <h4 class="modal-title" id="myModalLabel">Passwort vergessen</h4>
	            </div>
	            <div class="modal-body">
	              <div class="row">
	                <div class="col-xs-6">
	                  <div class="well">
	                    <form id="loginForm">
	                      <div class="form-group">
	                        <label for="password" class="control-label">Passwort</label>
	                        <%= f.email_field :password, :autofocus => true, :placeholder => 'Password' ,autocomplete: "off", :class=>'form-control'%>
	                        <span class="help-block"></span>
	                      </div>
						  <div class="form-group">
	                    	<label for="password" class="control-label">Passwort bestätigen</label>
	                    	<%= f.email_field :password_confirmation, :autofocus => true, :placeholder => 'Passwort bestätigen' ,autocomplete: "off", :class=>'form-control'%>
	                    	<span class="help-block"></span>
	                  	  </div>
	                      <%= f.submit "Ändern" , :class=>'btn btn-primary btn-block'%>
	                    </form>
	                  </div>
	                </div>
	              </div>
	            </div>
	          </div>
			</div>
	</div>
<% end -%>
