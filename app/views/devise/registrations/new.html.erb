<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|  %>
    <% if devise_mapping.rememberable? -%>
        <div class="container">
          <div id="login-overlay" class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Schliessen</span></button>
                <h4 class="modal-title" id="myModalLabel">Sign Up</h4>
              </div>
              <div class="modal-body">
                <div class="row">
                  <div class="col-xs-6">
                    <div class="well">
                      <form id="loginForm">
                        <div class="form-group">
                          <label for="username" class="             qqqq34              µ─                                            control-label">Email</label>
                          <%= f.email_field :email, :autofocus => true, :placeholder => 'Email' , :class=>'form-control'%>
                          <span class="help-block"></span>
                        </div>
                        <div class="form-group">
                          <label for="password" class="control-label">Password</label>
                            <%= f.password_field :password , :placeholder => 'Password', :class=>'form-control'%>
                          <span class="help-block"></span>
                          <label for="password" class="control-label">Password</label>
                          <%= f.password_field :password_confirmation, :placeholder => 'Password bestätigen', :class=>'form-control' %>
                          <span class="help-block"></span>
                        </div>
                        <div class="checkbox">
                          <label>
                            <div><%= f.check_box :remember_me %> <%= f.label "Login speichern" %></div></br>
                            <%= render "devise/shared/links" %>
                          </label>

                        </div>
                        <%= f.submit "Sign Up" , :class=>'btn btn-primary btn-block'%>
                      </form>
                    </div>
                  </div>
                  <div class="col-xs-6">
                    <p class="lead">Registrieren sie sich<span class="text-success">GRATIS</span></p>
                    <ul class="list-unstyled" style="line-height: 2">
                      <li><span class="fa fa-check text-success"></span> Werbung für ihre Kurse</li>
                      <li><span class="fa fa-check text-success"></span> Einfach zu bedienen</li>
                      <li><span class="fa fa-check text-success"></span> Erfassen sie Kurse</li>
                      <li><span class="fa fa-check text-success"></span> Keine Kosten</li>
                      <li><span class="fa fa-check text-success"></span> Gratis Kurse  <small>(nur neu Kunden)</small></li>
                      <li><a href="/read-more/"><u>Erfahre mehr</u></a></li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
    <% end -%>
<% end %>

</div>
