<h1 class="padding_top">Ihre Kurse</h1><br />

<% if !@courses.empty? %>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Titel</th>
				<th>Kurstyp</th>
				<th>Kursstart</th>
				<th>Anbieter</th>
				<th>Ort</th>
				<th>Preis</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<% @courses.each do |course| %>
				<tr>
					<td><%= course.titel %></td>
					<td><%= course.kurstyp %></td>
					<td><%= course.start %></td>
					<td><%= course.anbieter %></td>
					<td><%= course.ort %></td>
					<td><%= course.preis %></td>
					<div class="btn-group">
						<td colspan="3">
						<%= link_to 'Show', course, class: 'btn btn-default' %>
						<%= link_to 'Edit', edit_course_path(course), class: 'btn btn-default' %>
						<%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
						</td>
					</div>
				</tr>
		<% end %>
		</tbody>
	</table>
<% else %>
	<p>Sie haben noch keine Kurse erfasst. <%= link_to "Kurs erstellen", new_course_path %></p>
<% end %>