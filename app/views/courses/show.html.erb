<p id="notice"><%= notice %></p>
<div id="rdetails"> 
  <p>
    <strong>Titel:</strong>
    <%= @course.titel %>
  </p>

  <p>
    <strong>Kurstyp:</strong>
    <%= @course.kurstyp %>
  </p>

  <p>
    <strong>Start:</strong>
    <%= @course.start %>
  </p>

  <p>
    <strong>Anbieter:</strong>
    <%= @course.anbieter %>
  </p>

  <p>
    <strong>Ort:</strong>
    <%= @course.ort %>
  </p>

  <p>
    <strong>Preis:</strong>
    <%= number_to_currency(@course.preis, locale: :ch) %>
  </p> 
  <p class="margin_top">
    <strong>Bild:</strong> <br />
    <%= image_tag @course.image_url(:thumb) if @course.image? %>
  </p>   
</div>

<div id="ldetails">
  <p>
    <strong>Zielpublikum:</strong>
    <%= @course.zielpublikum %>
  </p>

  <p>
    <strong>Zulassung:</strong>
    <%= @course.zulassung %>
  </p>

  <p>
    <strong>Abschluss:</strong>
    <%= @course.abschluss %>
  </p>

  <p>
    <strong>Info:</strong>
    <%= link_to 'Link', url_protocol(@course.info), target: '_blank' %>
  </p>

  <p>
    <strong>Leitung:</strong>
    <%= @course.leitung %>
  </p>

  <p>
    <strong>Kontakt:</strong>
    <%= mail_to @course.kontakt %>
  </p> 
  <p class="margin_top">
    <strong>Inhalt:</strong>
    <%=simple_format h @course.inhalt %>
  </p>   
</div>


<div id="bdetails">
  <%= link_to 'Edit', edit_course_path(@course) %> |
  <%= link_to 'Back', courses_path %> 
</div>


