<%= form_for @course, :html => {:multipart => true} do |f| %>

  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>
      <ul>
      <% @course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


             <div class="panel-body" >
               <div class="col-md-5">
                <div class="form-group" style="float: left">
                  <div class="field">
                    <%= f.label "Titel", :class=>"control-label" %>
                    <%= f.text_field :titel, :placeholder => 'Titel', :class=>"form-control"%>
                  </div>
                  <div class="field">
                    <%= f.label "Kurstyp", :class=>"control-label" %></br>
                    <%= f.select :kurstyp, options_for_select(%w[MAS EMBA DAS CAS Kurs Fachtagung Infoveranstaltung]), :class=>"form-control"%>
                  </div>

                  <div class="field">
                    <%= f.label "Anbieter", :class=>"control-label" %>
                    <%= f.text_field :anbieter, :placeholder => 'Anbieter', :class=>"form-control"%>
                  </div>
                  <div class="field">
                    <%= f.label "Ort", :class=>"control-label" %>
                    <%= f.text_field :ort, :placeholder => 'Ort', :class=>"form-control"%>
                  </div>
                  <div class="field">
                    <%= f.label "Preis", :class=>"control-label" %>
                    <%= f.number_field :preis, :placeholder => 'Preis', :class=>"form-control"%>
                  </div>
                  <div class="field">
                    <%= f.label "Zielpublikum", :class=>"control-label" %>
                    <%= f.text_field :zielpublikum, :placeholder => 'Zielpublikum', :class=>"form-control"%>
                  </div>
                  <div class="field">
                    <%= f.label "Kontakt", :class=>"control-label" %>
                    <%= f.email_field :kontakt, :placeholder => 'example@example.com', :class=>"form-control"%>
                  </div>   
                </div>
              </div>
                <div class="col-md-5">
                 <div class="form-group" style="float: left"> 

                  <div class="field">
                    <%= f.label "Zulassung", :class=>"control-label" %>
                    <%= f.text_field :zulassung, :placeholder => 'Zulassung', :class=>"form-control"%>
                  </div>
                  <div class="field">
                      <%= f.label "Kursbeginn", :class=>"control-label" %></br>
                      <%= f.date_select :start, :placeholder => 'Beginn des Kurses' , :class=>"form-control"%>
                    </div>
                  <div class="field">
                    <%= f.label "Abschluss", :class=>"control-label" %>
                    <%= f.text_field :abschluss, :placeholder => 'Abschluss', :class=>"form-control"%>
                  </div>
                  <div class="field">
                    <%= f.label "Mehr Infos", :class=>"control-label" %>
                    <%= f.url_field :info, :placeholder => 'http://example.com', :class=>"form-control"%>
                  </div>
                  <div class="field">
                    <%= f.label "Leitung", :class=>"control-label" %>
                    <%= f.text_field :leitung, :placeholder => 'Leitung', :class=>"form-control"%>
                  </div>

                  <div class="field">
                  <%= image_tag @course.image_url(:thumb) if @course.image? %>
                  <%= f.file_field :image %>
                  </div> 
                </div>  
              </div>        
              <div class="field" style="float: left; margin-left: 10px">
                  <%= f.label "Inhalt", :class=>"control-label" %>
                  <%= f.text_area  :inhalt, :size => "69x12", :placeholder => 'Inhalt des Kurses', :class=>"form-control"%>
                  <div style=" margin-top: 10px">
                    <%= f.submit "Erstellen" , :class=>'btn btn-primary'%>                  
                  </div>

                </div>
            </div>


<% end %>

