<h1>Listing courses</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Promoter</th>
      <th>Location</th>
      <th>Kanton</th>
      <th>Country</th>
      <th>Mode</th>
      <th>Certificate</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= course.promoter %></td>
        <td><%= course.location %></td>
        <td><%= course.kanton %></td>
        <td><%= course.country %></td>
        <td><%= course.mode %></td>
        <td><%= course.certificate %></td>
        <td><%= course.duration %></td>
        <td><%= link_to 'Show', course, class:'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_course_path(course), class:'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } , class:'btn btn-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path, class:'btn btn-primary' %>
