<h1>All Courses</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Startdate</th>
      <th>Enddate</th>
      <th>Lecturer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= course.startdate %></td>
        <td><%= course.enddate %></td>
        <td><%= course.lecturer %></td>
        <div class="btn-group">
          <td colspan="3">
            <%= link_to 'Show', course, class: 'btn btn-default' %>
            <%= link_to 'Edit', edit_course_path(course), class: 'btn btn-default' %>
            <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </td>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path, class: 'btn btn-primary' %>
