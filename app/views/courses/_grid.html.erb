<%# show_filters: :when_filtered %>
<%= grid(@courses_grid, show_filters: :when_filtered) do |g|

  g.column name:  'Titel', attribute: 'titel'  do |course|
    link_to course.titel, course_path(course)
  end

  g.column  name:  'Kurstyp', attribute: 'kurstyp' do |course|
    course.kurstyp
  end

  g.column  name:  'Start', attribute: 'start' do |course|
    course.start
  end

  g.column name:  'Anbieter', attribute: 'anbieter' do |course|
    course.anbieter
  end

  g.column name:  'Ort', attribute: 'ort', custom_filter: :auto  do |course|
    course.ort 
  end

  g.column name:  'Preis', attribute: 'preis' do |course|
    course.preis
  end
end -%>