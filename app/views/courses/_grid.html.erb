<%# show_filters: :when_filtered %>
<%= grid(@courses_grid, show_filters: :when_filtered) do |g|

  g.column name:  'Name', attribute: 'name'  do |course|
    course.name
  end

  g.column  name:  'Beschreibung', attribute: 'description' do |course|
    course.description
  end

  g.column  name:  'Ort', attribute: 'location' do |course|
    course.location
  end

  g.column name:  'Abschluss', attribute: 'certificate' do |course|
    course.certificate
  end

  g.column name:  'Form', attribute: 'mode' do |course|
    course.mode
  end

  g.column name:  'Dauer', attribute: 'duration' do |course|
    course.duration
  end

  g.column   do |course|
    link_to('Edit', edit_course_path(course))
  end
end -%>