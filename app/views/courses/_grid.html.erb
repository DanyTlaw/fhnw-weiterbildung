<%# show_filters: :when_filtered %>
<%= grid(@courses_grid, show_filters: :when_filtered) do |g|

  g.column name:  'ID', attribute: 'id', filter: false do |course| 
    course.id
  end

  g.column name:  'Name', attribute: 'name'  do |course|
    course.name
  end

  g.column  name:  'Description', attribute: 'description' do |course|
    course.description
  end

  g.column  name:  'Start', attribute: 'startdate' do |course|
    course.startdate
  end

  g.column name:  'End', attribute: 'enddate' do |course|
    course.enddate
  end

  g.column name:  'Lecturer', attribute: 'lecturer' do |course|
    course.lecturer
  end

  g.column   do |course|
    link_to('Edit', edit_course_path(course))
  end
end -%>